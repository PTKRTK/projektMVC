@model IEnumerable<projektMVC.Models.BookCopy>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>Search</h2>

<table class="table">
    @using (Html.BeginForm())
    {
        <div class"row">
            <form id="some_form">
                <p>
                    Wpisz fraze: @Html.TextBox("search")
                    <input name="buttonsub" type="submit" value="Szukaj" />
                </p>
            </form>
        </div>

    }


<tr>
    <th>
        @Html.DisplayNameFor(model => model.ISBN)
    </th>
    <th>
        <p>Tytuł</p>
    </th>
    <th>
        <p > Autor</p>
        @*@Html.DisplayNameFor("")*@
    </th>
</tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ISBN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book.BookTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book.BookCategory.CategoryTitle)
            </td>
        </tr>
    }

</table>




