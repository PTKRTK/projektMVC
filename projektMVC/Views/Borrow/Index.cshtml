
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutEmployer.cshtml";
}

<h2>Wypożyczenia</h2>
@model IEnumerable<projektMVC.Models.Borrow>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BookCopy.ISBN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Punishment.Charge)
        </th>
        <th>
            Nazwa użytkownika
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BorrowDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReturnDate)
        </th>

        <th>
            Status ksiązki
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.BookCopy.ISBN)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Punishment.Charge)
    </td>

    <td>
        @Html.DisplayFor(model => item.User.UserName)
    </td>

    <td>
        @item.BorrowDate
    </td>
    <td>
        @item.ReturnDate
    </td>

    <td>
        @item.BookCopy.IsBorrowed
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.BorrowID }) |
        @Html.ActionLink("Details", "Details", new { id = item.BorrowID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.BorrowID })
        @Html.ActionLink("BorrowForUser", "BorrowForUser", new { id = item.BorrowID })
    </td>
</tr>
    }

</table>


