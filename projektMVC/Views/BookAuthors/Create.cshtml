        @Html.LabelFor(model => model.Book.BookTitle, "BookTitle", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("BookTitle", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.BookID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Author.Name, "Name", htmlAttributes: new { @class = "control-label col-md-2" })
